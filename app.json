{
  "expo": {
    "name": "recuper-gastos",
    "slug": "recuper-gastos",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "recupergastos",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "extra": {
      "stripePublishableKey": "pk_test_51SJN1HPv6B5q0zjI8gcWs4Ygt4NiFWfgxtF0HPwkcTbCWuNfhCthenv2yfQs6guWkHiiCY672qHmBYVXdrhjEjaT0067dEf8bV",
      "router": {},
      "eas": {
        "projectId": "d3cd41ab-05a7-4ed8-bad7-93c0af29b117"
      }
    },

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.recupergastos",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Necesitamos acceso para guardar tus facturas en tu dispositivo",
        "NSPhotoLibraryAddUsageDescription": "Permitir guardar facturas (PDF y XML) en tu galer√≠a"
      }
    },

    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.anonymous.recupergastos",
      "minSdkVersion": 24,
      "targetSdkVersion": 34,
      "compileSdkVersion": 34,
      "permissions": [
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO",
        "ACCESS_MEDIA_LOCATION"
      ]
    },

    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },

    "plugins": [
      "expo-router",
      "expo-web-browser",
      [
        "@stripe/stripe-react-native",
        {
          "enableGooglePay": true
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Permitir acceso para guardar facturas en tu dispositivo",
          "savePhotosPermission": "Permitir guardar documentos fiscales (PDF y XML)",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}